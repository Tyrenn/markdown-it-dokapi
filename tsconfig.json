{
"compilerOptions": {
	"target": "ES2016",

	"lib": ["es2017", "es7", "es6", "dom"],
	"module": "CommonJS",
	"esModuleInterop": true,
	"strict": true,
	"sourceMap": true,
	"declaration": true,

	"outDir": "dist",
	"rootDir": ".",
	"baseUrl": ".",

	"typeRoots": ["./node_modules/@types", "./types", "../../node_modules/@types"],
},
"include": ["src/**/*", "test/**/*"],
"exclude": ["node_modules", "dist"]
}