{
"compilerOptions": {
	"target": "ES2020",

	"module": "CommonJS",
	"esModuleInterop": true,
	"noImplicitAny": true,
	"strict": true,
	"moduleResolution": "node",
	"sourceMap": true,

	"outDir": "./out",
	"baseUrl": "./",
	"paths": {
	"*": ["node_modules/*"]
	},
	
	"typeRoots": ["./node_modules/@types", "./types", "../../node_modules/@types"],
	"resolveJsonModule": true,
	// Ignore node_modules, etc.
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true
},
"include": ["src/**/*", "test/**/*"],
"exclude": []
}